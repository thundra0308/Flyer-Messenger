<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flyer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/splashscreen_bgc</item>
        <item name="colorPrimaryVariant">@color/chatscreen_sender_tc</item>
        <item name="colorOnPrimary">@color/mainscreen_bgc</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#eeeefd</item>
        <item name="colorSecondaryVariant">@color/chatscreen_receiver_bubble_bg</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Flyer.Login" parent="Theme.Flyer">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/splashscreen_bgc</item>
    </style>
    <style name="Theme.Flyer.MainScreen" parent="Theme.Flyer">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/mainscreen_icon_color</item>
        <item name="android:statusBarColor">@color/mainscreen_bgc</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Flyer.AccountDetail" parent="Theme.Flyer">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/mainscreen_icon_color</item>
        <item name="android:statusBarColor">@color/mainscreen_bgc</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Flyer.Chat" parent="Theme.Flyer">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/mainscreen_icon_color</item>
        <item name="android:statusBarColor">@color/chatscreen_header_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="bottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>
    <style name="bottomSheetStyle_longpressdelchat" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal_longpresschatdel</item>
    </style>
    <style name="bottomSheetStyleaddcontact" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modaladdcontact</item>
    </style>
    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/login_sheet</item>
    </style>
    <style name="Modal_longpresschatdel" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/longpress_chat_bottomsheet</item>
    </style>
    <style name="Modaladdcontact" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/addcontact_bottomsheet</item>
    </style>
    <style name="bottomSheetStyle_accountdetail" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal_accountdetail</item>
    </style>
    <style name="Modal_accountdetail" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/accountdetail_bottomsheet</item>
    </style>
    <style name="bottomSheetStyle_attachmentpopup" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal_attachmentpopup</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Modal_attachmentpopup" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/attachmentbottomsheet_background</item>
    </style>
</resources>